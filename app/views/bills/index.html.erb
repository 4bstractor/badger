<h1>Listing bills</h1>

<table>
  <tr>
    <th>Source</th>
    <th>Amount</th>
    <th>Recurring</th>
    <th>Recur period</th>
    <th>Due date</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bills.each do |bill| %>
  <tr>
    <td><%= bill.source %></td>
    <td><%= bill.amount %></td>
    <td><%= bill.recurring %></td>
    <td><%= bill.recur_period %></td>
    <td><%= bill.due_date %></td>
    <td><%= link_to 'Show', bill %></td>
    <td><%= link_to 'Edit', edit_bill_path(bill) %></td>
    <td><%= link_to 'Destroy', bill, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

