<h1>Your Entities</h1>

<!-- Page needs an overhaul.  Make the boxes only for bill info and have the entity info frame it.  Then divide the entities like a stack of blocks -->

<% @entities.each do |entity| %>
<div id="entity_box">
  <p><%= link_to entity.name, entity %><%= entity.bills_summary %><%= link_to ' + Add A New Bill', new_bill_path %></p>
  <% if entity.bills.count > 0 %>
    <hr />
    <% entity.bills.each do |bill| %>
      <p><%= bill.name %> : <%= bill.info_string %></p>
    <% end %>
    <p><b>Total: <%= entity.total_value %></b></p>
  <% end %>
</div>
<% end %>

