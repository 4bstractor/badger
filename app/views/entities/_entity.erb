<p><%= link_to entity.name, entity %><%= entity.members_summary %><%= entity.bills_summary %><%= link_to ' + Add A New Bill', new_bill_path(:entity_id => entity.id) %></p>
<% if entity.bills.count > 0 %>
  <hr />
  <% entity.bills.each do |bill| %>
    <%= render bill %>
  <% end %>
  <br />
  <p><b>Total: <%= entity.total_value %></b></p>
<% end %>
